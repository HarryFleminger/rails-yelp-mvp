<div class="container">
  <h1>New review</h1>
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content, label: 'Please enter your review' %>
    <%= f.input :rating, collection: 1..5, label: 'Add your rating!' %>
    <%= f.submit "Submit review", class: "btn btn-primary" %>
  <% end %>
</div>
